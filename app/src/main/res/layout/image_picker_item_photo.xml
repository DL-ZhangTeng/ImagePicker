<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_picker_im_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0.5dp"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@mipmap/image_picker_photo" />

    <View
        android:id="@+id/image_picker_v_photo_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0.5dp"
        android:background="@color/image_picker_photo_mask"
        android:scaleType="centerInside"
        android:visibility="visible" />

    <CheckBox
        android:id="@+id/image_picker_cb_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:button="@mipmap/image_picker_select_unchecked"
        android:clickable="false"
        android:contentDescription="@null" />


</FrameLayout>